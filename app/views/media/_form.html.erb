<%= form_for(@medium) do |f| %>
  <% if @medium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
      <% @medium.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :plot %>
    <%= f.text_area :plot %>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>

  <div class="field">
    <%= f.label :runtime %>
    <%= f.text_field :runtime %>
  </div>

  <div class="field">
    <%= f.label :languages %>
    <% @languages.each do |language| %>
      <div class="checkbox">
        <%= check_box_tag :languages_ids,
                          language.id,
                          @medium.languages.exists?(language),
                          :name => "medium[language_ids][]" %>
        <%= label_tag :language_ids, language.name %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
